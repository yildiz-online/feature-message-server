<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

  <changeSet id="1" author="me">

    <createTable tableName="MESSAGES">
      <column name="MSG_ID" type="INT" autoIncrement="true"><constraints primaryKey="true"/></column>
      <column name="SENDER_ID" type="SMALLINT" />
      <column name="RECEIVER_ID" type="SMALLINT" />
      <column name="MESSAGE" type="VARCHAR(1024)" />
      <column name="READ" type="BOOLEAN" />
      <column name="DATE" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP" />
    </createTable>
  </changeSet>

</databaseChangeLog>
